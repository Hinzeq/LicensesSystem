@model IEnumerable<ProgramowanieZaawansowaneLicencje.Models.License>

@{
    ViewData["Title"] = "Licenses list";
}

<h1>Licenses list</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Key)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Key)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem =>  item.Employee.EmployeeId).
                @Html.DisplayFor(modelItem =>  item.Employee.FirstName)
                @Html.DisplayFor(modelItem =>  item.Employee.LastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LicenseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LicenseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LicenseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
